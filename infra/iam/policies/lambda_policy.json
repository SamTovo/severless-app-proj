{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "BucketAccess",
        "Effect": "Allow",
        "Action": "s3:GetObject",
        "Resource": "*"
      },
      {
        "Sid": "LayerAccess",
        "Effect": "Allow",
        "Action": "lambda:PublishLayerVersion",
        "Resource": "*"
    },
    {
        "Sid": "DynamoDBAccess",
        "Effect": "Allow",
        "Action": [
          "dynamodb:BatchWriteItem",
          "dynamodb:PutItem",
          "dynamodb:Query"
        ],
        "Resource": [
          "arn:aws:dynamodb:*"
        ]
      }
    ]
}